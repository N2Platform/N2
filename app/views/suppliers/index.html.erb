<p id="notice"><%= notice %></p>

<h1>Listing Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <td>GHG emissions</td>
      <td>Sustainability</td>
      <td>Social performance</td>
      <td>HCV protection</td>
      <td>Traceability</td>
      <td>Flower</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.ghg_and_pollution %></td>
        <td><%= supplier.sustainability_commitment %></td>
        <td><%= supplier.social_performance %></td>
        <td><%= supplier.hcv_protection %></td>
        <td><%= supplier.traceability_and_diversity %></td>
        <td><%= link_to 'flower', supplier_flower_path(supplier) %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

